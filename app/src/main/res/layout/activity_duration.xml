    <!--</android.support.design.widget.AppBarLayout>-->

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <com.skyfishjy.library.RippleBackground
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/content"
            app:rb_color="#303F9F"
            app:rb_radius="40dp"
            app:rb_rippleAmount="3"
            app:rb_duration="3000"
            app:rb_scale="10"
            android:background="#2196F3"
            android:layout_gravity="center"
            android:gravity="center">

            <LinearLayout
                android:id="@+id/linearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:paddingBottom="18dp"
                android:paddingTop="18dp">

                <TextView
                    android:id="@+id/txtTimeH"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="50dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="50dp"
                    android:text="00"
                    android:textAppearance="@android:style/TextAppearance.Material.Display3"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="50dp"
                    android:paddingTop="50dp"
                    android:text="h"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtTimeM"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="50dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="50dp"
                    android:text="00"
                    android:textAppearance="@android:style/TextAppearance.Material.Display3"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="50dp"
                    android:paddingTop="50dp"
                    android:text="m"
                    android:textColor="@color/white" />

                <TextView
                    android:id="@+id/txtTimeS"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="50dp"
                    android:paddingLeft="12dp"
                    android:paddingTop="50dp"
                    android:text="00"
                    android:textAppearance="@android:style/TextAppearance.Material.Display3"
                    android:textColor="@color/white" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="50dp"
                    android:paddingTop="50dp"
                    android:text="s"
                    android:textColor="@color/white" />

            </LinearLayout>

        </com.skyfishjy.library.RippleBackground>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginTop="24dp"
                app:cardElevation="3dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingLeft="8dp"
                        android:paddingTop="24dp"
                        android:paddingBottom="24dp"
                        android:paddingRight="12dp"
                        android:text="Total amount of parking fee"
                        android:background="@color/colorPrimaryDark"
                        android:textColor="@color/white"/>

                    <TextView
                        android:id="@+id/tvAmount"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:layout_marginLeft="12dp"
                        android:layout_marginBottom="24dp"
                        android:layout_marginRight="12dp"
                        android:text="RM 80"
                        android:textAppearance="@android:style/TextAppearance.Material.Widget"
                        android:textSize="20sp" />

                </LinearLayout>

            </android.support.v7.widget.CardView>

        </LinearLayout>

        <Button
            android:id="@+id/btnPay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:backgroundTint="@color/colorIndigo400"
            android:elevation="1dp"
            android:padding="24dp"
            android:textColor="@color/white"
            android:text="Choose Payment Method" />

    </LinearLayout>

</LinearLayout>
